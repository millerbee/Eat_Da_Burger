    </div>
<section class="row">
        <div class="col-md-7 col-left">
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block}}
                    {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-md-5 col-right">
            {{#each burgers}}
                {{#if devoured}}
                    <div>{{id}}. {{burger_name}}</div>
                {{/if}}
            {{/each}}        
        </div>          
    </section>



</div>

    <form class="create-form">
        <div class="form-group">

    <h2>Add a Burger</h2>
   
      <label for="newburg"></label>
            <textarea id="newburg" name="burger-name" rows="2" cols="40" placeholder=""></textarea>
        </div>
        <button type="submit" style= "background-color: #FFD700;">Submit</button>
        </div>
    </form>  